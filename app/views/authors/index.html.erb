<h1> All Authors</h1>

<%= link_to 'Create new author', href: new_author_path, controller: 'authors' %>
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
  </tr>

  <% @authors.each do |author| %>
  <tr>
    <td><%= author.name %></td>
    <td><%= author.homepage %></td>
    <td><%= link_to "Show", author_path(author) %></td>
  </tr>
  <% end %>
</table>