<h1> All Authors</h1>

<%= link_to 'Create new author', new_author_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
  </tr>

  <% @authors.each do |author| %>
  <tr>
    <td><%= author.name %></td>
    <td><%= author.homepage %></td>
    <td><%= link_to "Show", author_path(author) %></td>
    <td><%= link_to 'Edit', edit_author_path(author) %></td>
    <td><%= link_to 'Delete', author_path(author),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
  </tr>
  </tr>
  <% end %>
</table>